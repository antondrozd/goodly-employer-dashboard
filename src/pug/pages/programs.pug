extends /layouts/dashboard
include /mixins/sidebar

append head
  title Programs

block dashboard
  +sidebar('Programs')
  main.main-content.dashboard
    .dashboard__column
      .card.card--centered
        .card__container
          .card__heading-icon
            include /icons/featured-play-list
          h2.card__title Customize with Programs
          p.card__subtitle Use programs to customize employee contribution based on time, department, and more.
          button.btn.btn--size-25.card__btn(data-toggle="modal" data-target="addProgram") Add program
      .card
        .card__container
          button.card__dropdown.dropdown(type="button")
            .dropdown__icon
              include /icons/dropdown
            .dropdown__list
              a.dropdown__item(href="#") Option 1
              a.dropdown__item(href="#") Option 2
            ul.dropdown__list
              li.dropdown__item 1
              li.dropdown__item 2
          h2.card__title Marketing Program
          p.card__subtitle All employees in the Marketing ladder (Code: WNE)
          .card__amount
            span.card__amount-text Contribution amount
            b.card__amount-sum $150.00 monthly
          .card__employees-in-program
            include /icons/sidebar/employees
            | 3 employees in this program
      .card
        .card__container
          button.card__dropdown.dropdown(type="button")
            .dropdown__icon
              include /icons/dropdown
            .dropdown__list
              a.dropdown__item(href="#") Option 1
              a.dropdown__item(href="#") Option 2
          h2.card__title Support Program
          p.card__subtitle Customer support, use ENG program for QA
          .card__amount
            span.card__amount-text Contribution amount
            b.card__amount-sum $200.00 monthly
          .card__employees-in-program
            include /icons/sidebar/employees
            | 2 employees in this program
          
    .dashboard__column
      .card
        .card__container
          button.card__dropdown.dropdown(type="button")
            .dropdown__icon
              include /icons/dropdown
            .dropdown__list
              a.dropdown__item(href="#") Option 1
              a.dropdown__item(href="#") Option 2
          h2.card__title Engineering Program
          p.card__subtitle Program for all SWE, Product, and QA employees
          .card__amount
            span.card__amount-text Contribution amount
            b.card__amount-sum $100.00 monthly
          .card__employees-in-program
            include /icons/sidebar/employees
            | 6 employees in this program
      .card
        .card__container
          button.card__dropdown.dropdown(type="button")
            .dropdown__icon
              include /icons/dropdown
            .dropdown__list
              a.dropdown__item(href="#") Option 1
              a.dropdown__item(href="#") Option 2
          h2.card__title Sales Program
          p.card__subtitle Any Sales employee (not including TVCs)
          .card__amount
            span.card__amount-text Contribution amount
            b.card__amount-sum $150.00 monthly
          .card__employees-in-program
            include /icons/sidebar/employees
            | 5 employees in this program
  #addProgram.modal.card
    h3.card__title.modal__title Add Program
    button.modal__close-btn.icon-btn
      include /icons/close
    form.modal__form
      .form-group
        label.form-group__label(for='programName') Program Name
        input#programName.form-group__control(type='text', placeholder='Enter name (ex. Marketing Team)' name='programName')
      .form-group
        label.form-group__label.form-group__label--info Assistance Type
        input#radio1.form-group__radio(type='radio' name='assistanceType')
        label.form-group__label-radio(for='radio1') Contribution
        input#radio2.form-group__radio(type='radio' name='assistanceType')
        label.form-group__label-radio(for='radio2') Deduction
      .form-group
        label.form-group__label(for='description') Description
        input#description.form-group__control(type='text', placeholder='Enter program description' name='description')
      .form-group
        label.form-group__label.form-group__label--info(for='payrollCode') Payroll Code
        input#payrollCode.form-group__control(type='text', placeholder='Enter code' name='payrollCode')
      .form-group
        label.form-group__label.form-group__label--info Contribution vesting schedule
        .form-group__controls-wrapper
          select.form-group__control.form-group__control--select
            option(value='') 1
            option(value='') 2
            option(value='') 3
          select.form-group__control.form-group__control--select
            option(value='') 1
            option(value='') 2
            option(value='') 3
          input.form-group__control(type='text')
        a.link.link--with-plus.setup__link-with-plus(href='#') Add another level
      .form-group
        label.form-group__label.form-group__label--info(for='defaultContributionAmount') Default contribution amount
        input#defaultContributionAmount.form-group__control(type='text', placeholder='$0.00' name='defaultContributionAmount')
    .card__btns-container.card__btns-container--bottom-right
            button.btn.btn--size-40(type="button") Add